{
    "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json#",
    "configurations": {
        "CoreTest - SQLite": {
            "adapter": "vscode-cpptools",
            "configuration": {
                "request": "launch",
                "program": "${workspaceRoot}/out/build/linux-gcc-debug/src/tests/LightweightTest",
                "args": [
                ],
                "cwd": "${workspaceRoot}",
                "externalConsole": true,
                "stopAtEntry": false,
                "MIMode": "gdb"
            },
            "breakpoints": {
                "exception": {
                    "caught": "Y",
                    "uncaught": "Y"
                }
            }
        },
        "CoreTest - MS SQL Server": {
            "adapter": "vscode-cpptools",
            "configuration": {
                "request": "launch",
                "program": "${workspaceRoot}/out/build/linux-gcc-debug/src/tests/LightweightTest",
                "args": [
                ],
                "environment": [
                    {
                        "name": "ODBC_CONNECTION_STRING",
                        "value": "DRIVER={ODBC Driver 18 for SQL Server};SERVER=localhost;PORT=1433;UID=SA;PWD=Super1Secret;TrustServerCertificate=yes;DATABASE=LightweightTest"
                    }
                ],
                "cwd": "${workspaceRoot}",
                "externalConsole": true,
                "stopAtEntry": false,
                "MIMode": "gdb"
            },
            "breakpoints": {
